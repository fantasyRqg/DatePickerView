<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DatePickerView">
        <attr name="highlightColor" format="color" />
        <attr name="rangeColor" format="color" />
        <attr name="normalColor" format="color" />
        <attr name="inverseColor" format="color" />
        <attr name="dividerColor" format="color" />

        <attr name="textSize" format="dimension" />
        <attr name="lineMargin" format="dimension" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="cornerRadius" format="dimension" />

        <attr name="selectMode" format="enum">
            <enum name="single" value="0" />
            <enum name="range" value="1" />
        </attr>

    </declare-styleable>
</resources>